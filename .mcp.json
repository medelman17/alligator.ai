{
    "mcpServers": {
        "docker-mcp": {
            "command": "uvx",
            "args": [
                "docker-mcp"
            ]
        },
        "tavily": {
            "command": "npx",
            "args": [
                "-y",
                "tavily-mcp@0.2.1"
            ],
            "env": {
                "TAVILY_API_KEY": ""
            }
        },
        "chroma": {
            "command": "uvx",
            "args": [
                "chroma-mcp"
            ]
        },
        "neo4j-aura": {
            "command": "uvx",
            "args": [
                "mcp-neo4j-cypher@0.2.1"
            ],
            "env": {
                "NEO4J_URI": "bolt://localhost:7687",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "citation_graph_2024",
                "NEO4J_DATABASE": "neo4j"
            }
        }
    }
}